@model GetShredded.ViewModels.Output.Users.UserOutputModel
@{
    ViewData["Title"] = "Details";
}

<div class="container-fluid">
    <div class="row mt-5">
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
            <div class="text-center">
                <h3 class="card-title" style="color: orange">User Diaries</h3>
            </div>
            <ul class="list-group text-center">
                @if (Model.UserDiaries.Any())
                {
                    foreach (var s in Model.UserDiaries)
                    {

                        <a asp-action="Details" asp-route-id="@s.Id" asp-controller="Diaries" class="list-group-item list-group-item-action list-group-item" style="color: orange">@s.Title</a>
                    }
                }
                else
                {
                    <li class="list-group-item text-dark">User don't have own diaries!</li>
                }
            </ul>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
            <div class="text-center">
                <h3 class="card-title" style="color: orange">Followed Diaries</h3>
            </div>
            <ul class="list-group text-center">
                @if (Model.UserDiaries.Any())
                {
                    foreach (var s in Model.FollowedDiaries)
                    {

                        <a asp-action="Details" asp-route-id="@s.Id" asp-controller="Diaries" class="list-group-item list-group-item-action list-group-item-info">@s.Title</a>
                    }
                }
                else
                {
                    <li class="list-group-item text-Dark">User don't follow any diaries!</li>
                }
            </ul>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4 col-lg-4 col-xl-4">
            <div class="text-center">
                <h3 class="card-title" style="color: orange">User Diaries</h3>
            </div>
            <ul class="list-group text-center">
                <li class="list-group-item ">Notification Count: @Model.Notifications.Count</li>
                <li class="list-group-item ">Messages count: @Model.MessagesCount</li>
                <li class="list-group-item ">Comments count: @Model.Comments</li>
            </ul>
        </div>
    </div>
    <div class="row justify-content-center" style="margin-top: 30em">
        <div class="col-md-1">
            <a class="btn btn-warning" asp-area="" asp-controller="Diaries" asp-action="CreateDiary">Add Diary</a>
        </div>
    </div>
</div>
@section scripts{
    @{ await Html.RenderPartialAsync("_MyScriptsPartial"); }
}
